# SETUP
# ------
bashrc_sourcefile=$(readlink -f ${BASH_SOURCE})
export CARLSH="${bashrc_sourcefile%/*/*}"

library=(mfind ruby)
plugin=(autojump colorauto ls)
smart_plugin=true

PS1='\[\e[01;34m\]\W\[\e[00m\]\$ '
source $CARLSH/bash/loader.sh

# BASH SETTING
# ------------
shopt -s histappend
HISTCONTROL=ignoreboth
HISTSIZE=1000

# USER
# ----
export ALW='--color=always'
